<!-- Modal to Modify Employee-->
<div class="modal fade" id="ModifyEmployee" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-notify modal-info modal-lg" role="document">
        <!--Content-->
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header">
                <p class="heading">Modify/Delete <span class="modalEmployeeName"></span></p>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" class="white-text">&times;</span>
                    </button>
            </div>

            <!--Body-->
            <div class="modal-body">

                <div class="row">
                    <div class="col justify-content-center text-center">
                        <div class="row justify-content-center text-center">
                            <h3>Remove User</h3>
                            <p>Note that this action is not reversible!</p>
                        </div>
                        <div class="row justify-content-center text-center mt-5">
                            <a type="button" class="btn btn-danger" id="yesDelete">Yes! Delete</a>
                        </div>
                    </div>
                
                    <div class="col justify-content-center text-center">
                        <h3>Change Employee Role</h3>
                        <p>Choose a new role for the user and press sumbit</p>
                        <p>Current Role: <strong><span class="curr-role"></span></strong></p>
                        <select class="roles">
                            <option value="User">User</option>
                            <option value="Employee">Employee</option>
                            <option value="Admin">Admin</option>
                        </select>

                        <button id="modifyRole" class="btn btn-success">Change Role</button>
                    </div>
                </div>
            </div>

            <!--Footer-->
            <div class="modal-footer justify-content-center">
                
                <a type="button" class="btn btn-outline-primary waves-effect" data-dismiss="modal">Cancel</a>
            </div>
        </div>
        <!--/.Content-->
    </div>
</div>
<!-- Modal to Modify Employee-->

