@model List<BookCave.Models.ViewModels.BookViewModel>
    <div class="card">
        <div class="card-body row">
            <div class="col-md-2">
                <select asp-for="GenreIds" id="genreList" class="mdb-select colorful-select dropdown-primary" multiple searchable="Search here..">
                    <option value="" disabled selected>Filter by Genre(s)...</option>
                </select>
            </div>
            <div class="col-md-2">
                <select asp-for="PublisherIds" id="publisherList" class="mdb-select colorful-select dropdown-primary" multiple searchable="Search here..">
                    <option value="" disabled selected>Select Publisher(s)...</option>
                </select>
            </div>
            <div class="col-md-2">
                <select asp-for="Types" id="publisherList" class="mdb-select colorful-select dropdown-primary" multiple searchable="Search here..">
                    <option value="" disabled selected>Select Format(s)...</option>
                    <option value="Paperback">Paperback</option>
                    <option value="Hardcover">Hardcover</option>
                    <option value="E-book">E-book</option>                            
                </select>
            </div>
        </div>
    </div>
    <div class="row col-lg-8 col-md-12 offset-lg-2 wow fadeIn mb-5 container body-container">
        @foreach(var book in Model) {
        <div class="col-lg-3 col-md-6 mb-4 d-flex align-items-stretch">
            <div class="card card-ecommerce">
                <div class="row view overlay justify-content-center">
                    <img class="card-img-top thumb " src="data:image/jpg;base64, @Convert.ToBase64String(book.CoverImage) ">
                    <a asp-controller="Book" asp-action="Details" asp-route-id="@book.BookId">
                        <div class="mask rgba-whitei-slght"></div>
                    </a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <h6 class="col-12 card-title mb-2">@book.Title</h6>
                            <p class="col-12 card-text mb-1">
                                @foreach(var author in book.Author) 
                                { 
                                    if(author != book.Author.Last())
                                    {
                                        <span>@author.Name, </span>
                                    }
                                    else
                                    {
                                        <span>@author.Name</span>
                                    }
                                }    
                            </p>
                            <p class="col-12 card-text mb-1">@book.Type</p>
                            <p class="col-12 card-text mb-1">@book.Rating</p>
                            <h4 class="col-12 mb-0">$ @book.Price</h4>
                            <a class="btn btn-unique" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@book.BookId">Add to cart!</a>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>