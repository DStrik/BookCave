@model BookCave.Models.InputModels.UserLoginInputModel

<div class="container body-container">
    <div class="row">
        <div class="col-5 mx-auto">
            <!-- Sign In-->
            <section class="form-dark wow fadeIn">
                <!-- Form -->
                <form asp-controller="User" asp-action="Login">
                    <div class="card card-image" style="background-image: url('https://mdbootstrap.com/img/Photos/Others/pricing-table7.jpg'); width: 28rem;">
                        <div class="text-white rgba-stylish-strong py-5 px-5 z-depth-4">

                            <!-- Header -->
                            <div class="text-center">
                                <h3 class="white-text mb-5 mt-4 font-weight-bold"><strong>SIGN</strong> <a class="green-text font-weight-bold"><strong> IN</strong></a></h3>
                            </div>

                            <!--Body-->
                            <div class="md-form">
                                <input type="text" id="Email" class="form-control white-text" asp-for="Email">
                                <label asp-for="Email">E-mail</label>
                            </div>

                            <div class="md-form pb-3">
                                <input type="password" id="Password" class="form-control white-text" asp-for="Password">
                                <label asp-for="Password">Password</label>
                                <div class="form-check my-4">
                                    <input class="form-check-input" type="checkbox" value="true" id="RememberMe" asp-for="RememberMe">
                                    <label class="form-check-label white-text" asp-for="RememberMe">Remember me</label>
                                </div>
                            </div>

                            <!--Grid row-->
                            <div class="row d-flex align-items-center mb-4">

                                <!--Grid column-->
                                <div class="text-center mb-3 col-md-12">
                                    <button type="submit" class="btn btn-success btn-block btn-rounded z-depth-1">Sign in</button>
                                </div>
                                <!--Grid column-->
                            </div>
                            <!--Grid row-->

                            <!--Grid column-->
                            <div class="col-md-12">
                                <p class="font-small white-text d-flex justify-content-end">Don't have an account? <a asp-action="SignUp" class="green-text ml-1 font-weight-bold"> Sign Up!</a></p>
                            </div>
                            <!--Grid column-->

                        </div>
                    </div>
                </form>
                <!-- Form -->

            </section>
            <!--Section: Live preview-->
        </div>                
                           
    </div>
</div>
