@model BookCave.Models.InputModels.UserLoginInputModel

<div class="container body-container">
    <div class="row">
        <div class="col-5 mx-auto">
            <!-- Sign In-->
            <section class="form-dark wow fadeIn">
                <!-- Form -->
                <form id="LogInForm" method="POST">
                    <div class="card card-image" style="background-image: url('https://mdbootstrap.com/img/Photos/Others/pricing-table7.jpg'); width: 28rem;">
                        <div class="text-white rgba-stylish-strong py-5 px-5 z-depth-4">

                            <!-- Header -->
                            <div class="text-center">
                                <h3 class="white-text mb-5 mt-4 font-weight-bold"><strong>SIGN</strong> <a class="green-text font-weight-bold"><strong> IN</strong></a></h3>
                            </div>

                            <!--Body-->
                            <div class="md-form">
                                <input type="text" id="Email" class="form-control white-text" asp-for="Email">
                                <label asp-for="Email">E-mail</label>
                            </div>

                            <div class="md-form pb-3">
                                <input type="password" id="Password" class="form-control white-text" asp-for="Password">
                                <label asp-for="Password">Password</label>
                                <div class="form-check my-4">
                                    <input class="form-check-input" type="checkbox" value="true" id="RememberMe" asp-for="RememberMe">
                                    <label class="form-check-label white-text" asp-for="RememberMe">Remember me</label>
                                </div>
                            </div>

                            <!--Grid row-->
                            <div class="row d-flex align-items-center mb-4">

                                <!--Grid column-->
                                <div class="text-center mb-3 col-md-12">
                                    <button id="LogInSubmit" type="button" class="btn btn-success btn-block btn-rounded z-depth-1">Sign in</button>
                                </div>
                                <!--Grid column-->
                            </div>
                            <!--Grid row-->

                            <!--Grid column-->
                            <div class="col-md-12">
                                <p class="font-small white-text d-flex justify-content-end">Don't have an account? <a asp-action="SignUp" class="green-text ml-1 font-weight-bold"> Sign Up!</a></p>
                            </div>
                            <!--Grid column-->

                        </div>
                    </div>
                </form>
                <!-- Form -->

            </section>
            <!--Section: Live preview-->
        </div>                
                           
    </div>
</div>

<!-- Modal processing -->
<div class="modal fade" id="processingModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <h4 class="modal-title" id="exampleModalLabel">Processing...</h4>
            </div>
            <div class="modal-body text-center">

                <div class="preloader-wrapper big active">
                    <div class="spinner-layer spinner-blue">
                        <div class="circle-clipper left">
                            <div class="circle"></div>
                        </div>
                        <div class="gap-patch">
                            <div class="circle"></div>
                        </div>
                        <div class="circle-clipper right">
                            <div class="circle"></div>
                        </div>
                    </div>
                    <div class="spinner-layer spinner-red">
                        <div class="circle-clipper left">
                            <div class="circle"></div>
                        </div>
                        <div class="gap-patch">
                            <div class="circle"></div>
                        </div>
                        <div class="circle-clipper right">
                            <div class="circle"></div>
                        </div>
                    </div>
                    <div class="spinner-layer spinner-yellow">
                        <div class="circle-clipper left">
                            <div class="circle"></div>
                        </div>
                        <div class="gap-patch">
                            <div class="circle"></div>
                        </div>
                        <div class="circle-clipper right">
                            <div class="circle"></div>
                        </div>
                    </div>
                    <div class="spinner-layer spinner-green">
                        <div class="circle-clipper left">
                            <div class="circle"></div>
                        </div>
                        <div class="gap-patch">
                            <div class="circle"></div>
                        </div>
                        <div class="circle-clipper right">
                            <div class="circle"></div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- Modal processing -->

<!-- MODAL fail warning for log in-->
<div class="modal fade left" id="ModalWarningLogin" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-notify modal-warning modal-dialog-centered" role="document">
        <!--Content-->
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header">
                <p class="heading">Warning</p>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="white-text">&times;</span>
                </button>
            </div>

            <!--Body-->
            <div class="modal-body">

                <div class="row">
                    <div class="col-9">
                        <p>There was an error in your input</p>
                        <p class="card-text"><strong>You must enter your correct e-mail and password</strong></p>
                    </div>
                </div>

            </div>

            <!--Footer-->
            <div class="modal-footer justify-content-center">
                <a type="button" class="btn btn-outline-primary waves-effect" data-dismiss="modal">Close</a>
            </div>
        </div>
        <!--/.Content-->
    </div>
</div>
<!-- MODAL fail warning for login-->